<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >


    <demo.optimizel.dn.com.myqqc60.AccessCamera.Camera.view.CameraContainer
        android:id="@+id/container"
        android:background="#990033"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/ll_cancle_iv_potrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_record_iv_potrait"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_close2_nm" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/camera_record_top_control_layout_potrait"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/ll_flash_iv_potrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/switch_camera_layout_potrait"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/switch_flash_iv_potrait"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/icon_flashlight2_nm" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/switch_camera_layout_potrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/switch_camera_iv_potrait"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_reverse_nm"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/camera_record_control_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:clickable="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/video_recorder_stop_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="short"
            android:src="@drawable/shot_stop_img_selector" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/camera_record_control_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/video_recorder_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="short"
            android:src="@drawable/shot_img_selector"
           />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/shot_dialog_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/shot_dialog_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16dp"
            android:background="@drawable/text_view_border"
            android:textColor="#ffffff"
            android:text="点击这里开始拍摄视频哦"
            android:visibility="gone"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/local_video_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:background="@drawable/film_long_icon_default_black_nor"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/local_video_iv"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/film_long_icon_background"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/local_video_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:background="@drawable/film_long_icon_default_black_nor"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/local_video_iv1"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/film_long_icon_background"
            />
    </LinearLayout>

</RelativeLayout>